{
    "name": "webignition/yaml-document-generator",
    "description": "Generate a yaml document from an array of data",
    "keywords": ["yaml", "parser", "collection", "set"],
    "homepage": "https://github.com/webignition/yaml-document-generator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\YamlDocumentGenerator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\YamlDocumentGenerator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.php",
            "./vendor/bin/phpcs"
        ],
        "cs-fix": [
            "./vendor/bin/ecs check src tests --ansi --config ecs.php --fix"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse --ansi",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@cs",
            "@static-analysis",
            "@test"
        ]
    },
    "require": {
        "php": ">=7.4",
        "symfony/yaml": "^5.1",
        "webignition/basil-runner-documents": ">=0.1,<1"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.40",
        "phpstan/phpstan-mockery": "^0.12.7",
        "phpunit/phpunit": "^9.3",
        "squizlabs/php_codesniffer": "^3.5",
        "symplify/easy-coding-standard": "^8.2"
    },
    "config": {
        "sort-packages": true
    }
}
