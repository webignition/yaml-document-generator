{
    "name": "webignition/yaml-document-generator",
    "description": "Generate a yaml document from an array of data",
    "keywords": ["yaml", "parser", "collection", "set"],
    "homepage": "https://github.com/webignition/yaml-document-generator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\YamlDocumentGenerator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\YamlDocumentGenerator\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan analyse",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": "^8.4",
        "symfony/yaml": "^5.4|^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.90",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "config": {
        "sort-packages": true
    }
}
